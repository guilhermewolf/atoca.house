{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Renovate configuration for Kubernetes GitOps repository",
  "extends": [
    "config:best-practices",
    ":dependencyDashboard",
    ":semanticCommits",
    ":timezone(Europe/Amsterdam)",
    "docker:enableMajor",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests",
    ":configMigration",
    ":pinDevDependencies",
    "abandonments:recommended",
    ":automergeBranch",
    ":disableRateLimiting",
    "github>guilhermewolf/atoca.house//.github/renovate/grafanaDashboards.json"
  ],
  "labels": [
    "renovate"
  ],
  "assigneesFromCodeOwners": true,
  "reviewersFromCodeOwners": true,
  "commitMessagePrefix": "chore(deps):",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{#if isPinDigest}}{{{newDigestShort}}}{{else}}{{#if isMajor}}{{prettyNewMajor}}{{else}}{{#if isSingleVersion}}{{prettyNewVersion}}{{else}}{{#if newValue}}{{{newValue}}}{{else}}{{{newDigestShort}}}{{/if}}{{/if}}{{/if}}{{/if}}",
  "prConcurrentLimit": 5,
  "prHourlyLimit": 3,
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "separateMinorPatch": false,
  "ignoreTests": false,
  "updateNotScheduled": false,
  "timezone": "Europe/Amsterdam",
  "schedule": [
    "after 9am every weekday",
    "before 5pm every weekday"
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security"
    ],
    "assignees": [
      "@guilhermewolf"
    ]
  },
  "packageRules": [
    {
      "description": "Group Kubernetes infrastructure updates",
      "groupName": "kubernetes-infrastructure",
      "matchDatasources": [
        "helm"
      ],
      "schedule": [
        "every weekend"
      ],
      "matchPackageNames": [
        "/cilium/",
        "/cert-manager/",
        "/sealed-secrets/",
        "/external-secrets/",
        "/reloader/",
        "/metrics-server/"
      ]
    },
    {
      "description": "Group Rook-Ceph updates (critical storage)",
      "groupName": "rook-ceph",
      "matchDatasources": [
        "helm",
        "docker"
      ],
      "automerge": false,
      "labels": [
        "renovate/helm",
        "area/storage",
        "critical"
      ],
      "reviewers": [
        "@guilhermewolf"
      ],
      "matchPackageNames": [
        "/rook/",
        "/ceph/"
      ]
    },
    {
      "description": "Group monitoring stack updates",
      "groupName": "monitoring-stack",
      "matchDatasources": [
        "helm",
        "docker"
      ],
      "matchPackageNames": [
        "/kube-prometheus-stack/",
        "/grafana/",
        "/prometheus/",
        "/alertmanager/"
      ]
    },
    {
      "description": "Group media app updates",
      "groupName": "media-apps",
      "matchDatasources": [
        "docker"
      ],
      "matchFileNames": [
        "apps/media/**"
      ],
      "schedule": [
        "every weekend"
      ]
    },
    {
      "description": "Auto-merge OCI Charts (minor/patch)",
      "matchDatasources": [
        "docker"
      ],
      "automerge": true,
      "automergeType": "pr",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "ignoreTests": false,
      "matchPackageNames": [
        "//kube-prometheus-stack//",
        "//grafana//"
      ]
    },
    {
      "description": "Auto-merge trusted GitHub Actions",
      "matchManagers": [
        "github-actions"
      ],
      "automerge": true,
      "automergeType": "branch",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "minimumReleaseAge": "1 minute",
      "ignoreTests": true,
      "matchPackageNames": [
        "/^actions//",
        "/^renovatebot//"
      ]
    },
    {
      "description": "Require manual approval for major updates",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "labels": [
        "major-update"
      ],
      "reviewers": [
        "@guilhermewolf"
      ]
    },
    {
      "description": "Pin Talos versions (don't auto-update)",
      "enabled": false,
      "matchPackageNames": [
        "/talos/",
        "/talosctl/"
      ]
    },
    {
      "description": "Docker Compose updates",
      "matchManagers": [
        "docker-compose"
      ],
      "matchFileNames": [
        "stacks/**"
      ],
      "labels": [
        "renovate/container",
        "area/docker"
      ],
      "schedule": [
        "every weekend"
      ]
    }
  ],
  "docker-compose": {
    "managerFilePatterns": [
      "/(^|/)stacks/.+\\.ya?ml$/"
    ]
  },
  "argocd": {
    "managerFilePatterns": [
      "/(^|/)infra/k8s/.+/application\\.ya?ml$/",
      "/(^|/)apps/.+/application\\.ya?ml$/"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "/(^|/)infra/k8s/.+/values\\.ya?ml$/",
      "/(^|/)apps/.+/values\\.ya?ml$/"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/(^|/)infra/k8s/.+\\.ya?ml$/",
      "/(^|/)apps/.+\\.ya?ml$/"
    ],
    "ignorePaths": [
      "**/node_modules/**",
      "**/.git/**",
      "**/infra/talos/**"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "Process annotated dependencies in YAML and ENV files",
      "managerFilePatterns": [
        "/(^|/)\\.?[^/]*\\.ya?ml$/",
        "/(^|/)\\.?[^/]*\\.ya?ml\\.j2$/",
        "/(^|/)\\.?[^/]*\\.env$/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( repository=(?<registryUrl>\\S+))?\\n.+(:\\s|=)(&\\S+\\s)?(?<currentValue>\\S+)",
        "datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( repository=(?<registryUrl>\\S+))?\\n.+/(?<currentValue>(v|\\d)[^/]+)"
      ],
      "datasourceTemplate": "{{#if datasource}}{{{datasource}}}{{else}}github-releases{{/if}}"
    },
    {
      "customType": "regex",
      "description": "Process container image tags in Kubernetes manifests",
      "managerFilePatterns": [
        "/(^|/)infra/k8s/.+\\.ya?ml$/",
        "/(^|/)apps/.+\\.ya?ml$/"
      ],
      "matchStrings": [
        "image:\\s+['\"]?(?<depName>[^:'\"\\s]+):(?<currentValue>[^'\"\\s]+)['\"]?"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ]
}
