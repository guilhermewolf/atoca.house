{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "automerge": true,
  "automergeType": "pr",
  "ignorePaths": [
    ".github/**"
  ],
  "packageRules": [
    {
      "managers": ["dockerfile", "docker-compose"],
      "fileMatch": ["^stacks/(.*?/)?.*\\.yml$"],
      "enabled": true
    },
    {
      "managers": ["kustomize"],
      "fileMatch": ["^infra/.*/kustomization\\.yaml$", "^apps/.*/kustomization\\.yaml$"],
      "enabled": true
    }
  ]
}
