{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "automerge": true,
  "automergeType": "pr",
  "ignorePaths": [
    ".github/**"
  ],
  "docker": {
    "enabled": true,
    "fileMatch": ["^stacks/(.*?/)?.*\\.yaml$"]
  },
  "kubernetes": {
    "enabled": true
  }
}
